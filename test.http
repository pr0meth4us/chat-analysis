### Check task status and progress (use this to monitor background processing)
GET {{host}}/task-status/cdbf43fe-922c-424a-85d5-c201f67bc743 completed successfully.

> {%
    client.test("Task status should be available", function() {
        client.assert(response.status === 200, "Expected status 200");
        client.assert(response.body.task_id, "Should have task_id");

        const status = response.body.status;
        const progress = response.body.progress || 0;

        console.log("ğŸ“Š Task Status:", status);
        console.log("ğŸ“ˆ Progress:", progress.toFixed(1) + "%");

        if (response.body.created_at) {
            console.log("â° Created:", response.body.created_at);
        }
        if (response.body.started_at) {
            console.log("ğŸš€ Started:", response.body.started_at);
        }

        switch(status) {
            case "pending":
                console.log("â³ Task is waiting to start...");
                break;
            case "running":
                console.log("ğŸ”„ Task is currently processing...");
                break;
            case "completed":
                console.log("âœ… Task completed successfully!");
                if (response.body.message) {
                    console.log("ğŸ“ Result:", response.body.message);
                }
                if (response.body.unique_senders) {
                    console.log("ğŸ‘¥ Unique senders:", response.body.unique_senders.length);
                    console.log("ğŸ·ï¸ Senders:", response.body.unique_senders.join(", "));
                }
                if (response.body.completed_at) {
                    console.log("ğŸ Completed:", response.body.completed_at);
                }
                break;
            case "failed":
                console.log("âŒ Task failed!");
                if (response.body.error) {
                    console.log("ğŸ’¥ Error:", response.body.error);
                }
                break;
            case "timeout":
                console.log("â° Task timed out!");
                if (response.body.error) {
                    console.log("ğŸ’¥ Error:", response.body.error);
                }
                break;
            default:
                console.log("â“ Unknown status:", status);
        }
    });
%}

